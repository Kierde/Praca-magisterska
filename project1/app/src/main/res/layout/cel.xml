<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonZmniejsz"
        android:text="Utrata wagi"
        android:textAllCaps="false"
        android:layout_width="362dp"
        android:layout_height="53dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonUtrzymaj" />

    <TextView
        android:id="@+id/textViewcel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Postaw przed sobÄ… cel"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonUtrzymaj"
        android:layout_width="362dp"
        android:layout_height="53dp"
        android:layout_marginTop="64dp"
        android:text="Utrzymanie wagi"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewcel" />

    <Button
        android:id="@+id/buttonPrzybierz"
        android:layout_width="362dp"
        android:layout_height="53dp"
        android:layout_marginTop="68dp"
        android:text="Przybranie na wadze"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonZmniejsz" />
</androidx.constraintlayout.widget.ConstraintLayout>