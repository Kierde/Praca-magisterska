<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/nazwaCwiczenia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Nazwa posiłku"
        android:textSize="15dp"
        android:inputType="textCapSentences"
        />

    <EditText
        android:id="@+id/spaloneKalorie1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:hint="Ilość kalorii na 100 g"
        android:textSize="15dp"
        android:inputType="numberDecimal|numberSigned"
        />


    <EditText
        android:id="@+id/iloscWeglodialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:textSize="15dp"
        android:hint="Ilość węglowodanów na 100 [g] produktu"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/iloscBialkadialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:textSize="15dp"
        android:hint="Ilość białka na 100 [g] produktu"
        android:inputType= "numberDecimal"/>

    <EditText
        android:id="@+id/iloscTluszczudialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:textSize="15dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:hint="Ilość tłuszczu na 100 [g] produktu"
        android:inputType="numberDecimal" />


    <EditText
        android:id="@+id/ilosc_produktu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:textSize="15dp"
        android:hint="Ilość produktu [g]"
        android:inputType="numberDecimal"
        />

    <TextView
        android:id="@+id/iloscKaloriiDoBazy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:textSize="15dp"
        android:hint="Ilość kcal do dodania do bazy [g]"
        android:inputType="numberDecimal"
        />





    <Button
        android:id="@+id/dodajCwiczenie1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dodaj" />

</LinearLayout>